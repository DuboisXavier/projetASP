@using ProjetASP.MVC.Infrasctucture;

@model IEnumerable<ProjetASP.MVC.Models.ReservationListItem>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateDebut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreDePersonnes)
        </th>
        <th>
            @Html.DisplayName("Nom")
        </th>
        <th>
            @Html.DisplayName("Prenom")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChambreId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DateDebut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDePersonnes)
            </td>
            <td>
                @Html.DisplayName(SessionManager.UtilisateurDetails.Nom)
            </td>
            <td>
                @Html.DisplayName(SessionManager.UtilisateurDetails.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChambreId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
